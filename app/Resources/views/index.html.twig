{% extends 'base.html.twig' %}

{% block body %}
    {% set count = 0 %}

    {% for article in articles if count < 4 %}
        {% set count = count + 1 %}
        {% if count == 1 or count == 3 %}
            <div class="row">
        {% endif %}
        <a href="{{ path('article_view', {id: article.id}) }}">
            <div class="col-md-6 col-xs-12 article-top-{{ count }}">
                <div class="main-article" style="background-image: url('{{ asset(article.image) }}')">
                    &nbsp;
                    <div class="article_info">
                        <div class="article_info_title">
                            {{ article.title }}
                        </div>

                        <div class="article_info_stats">
                            <span class="article_info_stats_date">
                                {{ article.postedOn|date("d/m/Y") }}
                            </span>
                            <span class="article_info_stats_views">
                                {{ article.views }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        {% if count == 2 or count == 4 %}
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}
